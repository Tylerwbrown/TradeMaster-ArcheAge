<%# modal_id, btn_class, button, title, close_button, and a block %>
<button type="button" class="btn <%= btn_class %>" data-toggle="modal" data-target="#<%= modal_id %>">
  <%= button %>
</button>

<div class="modal fade" id="<%= modal_id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header", style="margin: 0 auto">
        <h5 class="modal-title" id="exampleModalLabel"><%= title %></h5>
      </div>
      <div class="modal-body">
        <%= yield %>
      </div>
      <% if close_button.present? %>
        <div class="modal-footer">
          <button class="btn btn-success btn-block" data-dissmiss="modal"><%= close_button %></button>
        </div>
      <% end %>
    </div>
  </div>
</div>
