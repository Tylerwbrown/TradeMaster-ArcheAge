<%= render layout: 'layouts/modal', locals:
                                          { modal_id: '1',
                                            btn_class: 'btn btn-success btn-block btn-lg',
                                            title: 'How many items are in your trade pack?',
                                            button: 'New Trade Pack',
                                            close_button: nil } do %>
  <%= simple_form_for :components, url: new_trade_pack_path do |f| %>
    <%= f.input :count, label: false %>
    <%= f.submit :Start, class: 'btn-block btn btn-success' %>
  <% end %>
<% end %>
