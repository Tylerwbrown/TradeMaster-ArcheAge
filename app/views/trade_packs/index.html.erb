<p id="notice"><%= notice %></p>

<h1 class="text-center">Trade Packs</h1>

<% @trade_packs.each do |trade_pack| %>
  <div class="text-center">
    <%= link_to trade_pack.name, trade_pack, class: 'btn btn-primary btn-lg' %>
    <br/>
    <span class="badge badge-warning">
      <%= trade_pack.component_cost[:gold] %>.<%= trade_pack.component_cost[:silver] %> Gold
    </span>
    <span class="badge badge-info"><%= trade_pack.labor_cost %> Labor</span>
  </div>
  <br /><br/>
<% end %>
