<h1 class="text-center">Trade Packs</h1>

<div class="row">
  <% Region.list.each do |region| %>
    <% local_trade_packs = @trade_packs.where(region: region) %>
    <% if local_trade_packs.present? %>
      <div class="col sm-6 col-md-4 col-lg-2 text-center">
        <h1><span class="badge badge-pill badge-default btn-block"><%= region.to_s.titleize %></span></h1>
        <% local_trade_packs.each do |trade_pack| %>
          <%= render partial: 'trade_packs/index/trade_pack', locals: { trade_pack: trade_pack.decorate } %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
